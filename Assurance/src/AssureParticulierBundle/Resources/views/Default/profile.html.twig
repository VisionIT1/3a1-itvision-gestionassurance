{% extends 'base.html.twig' %}


{% block main %}
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

    <!--
    User Profile Sidebar by @keenthemes
    A component of Metronic Theme - #1 Selling Bootstrap 3 Admin Theme in Themeforest: http://j.mp/metronictheme
    Licensed under MIT
    -->

    <div class="container">
        <div class="row profile">
            <div class="col-md-3">
                <div class="profile-sidebar">

                    <!-- SIDEBAR USERPIC -->
                    <div class="profile-userpic">
                        <img src="http://keenthemes.com/preview/metronic/theme/assets/admin/pages/media/profile/profile_user.jpg" class="img-responsive" alt="">
                    </div>
                    <!-- END SIDEBAR USERPIC -->
                    <!-- SIDEBAR USER TITLE -->
                    <div class="profile-usertitle">
                        <div class="profile-usertitle-name">
                            <h4> Bienvenue dans votre profile <br><br>
                            Votre nom d'utilisateur est : {{ app.user.username }}
                            </h4> </div>
                        <div class="profile-usertitle-job">
                            <br>Vous êtes un assuré {{ app.user.type }}

                        </div>
                    </div>
                    <!-- END SIDEBAR USER TITLE -->
                    <!-- SIDEBAR BUTTONS -->

                    <!-- END SIDEBAR BUTTONS -->
                    <!-- SIDEBAR MENU -->
                    <div class="profile-usermenu">
                        <ul class="nav">
                            <li class="active">

                                {% if app.user.type == "entreprise"%}
                                    <a href="{{ path('affichercontratentr',{'nom':assentr.nomEntr})}}">
                                        <i class="glyphicon glyphicon-home"></i>
                                        Votre espace d'assurance </a>
                                {% else %}
                                    <a href="{{ path('affichercontratpart',{'cin':assure.cin})}}">
                                        <i class="glyphicon glyphicon-home"></i>
                                        Votre espace d'assurance </a>

                                {% endif %}



                            </li>
                            <li>
                                <a href="{{ path('fos_user_profile_edit') }}">
                                    <i class="glyphicon glyphicon-user"></i>
                                    Parametres de sécurités </a>
                            </li>

                            <li>

                                {% if app.user.type == "entreprise"%}
                                <a href="{{ path('modifierprofileentr')}}">
                                    <i class="glyphicon glyphicon-asterisk"></i>
                                  Entreprise</a>
                                {% else %}
                                <a href=" {{ path('modifierprofilepart',{'email':app.user.email})}}">

                                    <i class="glyphicon glyphicon-asterisk"></i>
                                    Autres paramétres </a>
                                {% endif %}

                            </li>
                            <li>
                                <a href="#" target="_blank">
                                    <i class="glyphicon glyphicon-ok"></i>
                                    Tasks </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="glyphicon glyphicon-flag"></i>
                                    Help </a>
                            </li>
                        </ul>
                    </div>
                    <!-- END MENU -->
                </div>
            </div>
            <div class="col-md-9">

                <div class="profile-content">
                    Some user related content goes here...
                </div>
            </div>
        </div>
    </div>

    <br>
    <br>

{% endblock %}
