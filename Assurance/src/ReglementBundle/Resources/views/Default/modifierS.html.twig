{% extends 'Backbase.html.twig' %}

{% block main %}
        <!-- .page -->


    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Modifier Sinistre</div>
            <div class="card-body">
                <form action="{{ path('back_Edit') }}" method="post">

                    <div class="form-group">
                        <div ><input type="number"hidden name="codes" value="{{ c.getCodeSinistre() }}" ></div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <input type="date" id="Date Sinistre" class="form-control" max="{{ c.getDateSinistre()|date('Y-m-d') }}" placeholder="Date Sinistre" name="dates" value="{{ c.getDateSinistre()| date('Y-m-d') }}" required="required" autofocus="autofocus">
                                    <label for="firstName">Date Sinistre</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <input type="text" id="Lieu Sinistre" class="form-control" placeholder="Lieu Sinistre" name="lieus"value="{{ c.getLieuSinistre() }}" required="required">
                                    <label for="Lieu Sinistre">Lieu Sinistre</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">

                                        <input type="number" id="Dommage Materielle" class="form-control" min="0" max="1"  placeholder="Dommage Materielle" name="dm" value="{{ c.getDommageMat() }}" required="required" autofocus="autofocus">

                                    <label for="Dommage Materielle">Dommage Materielle</label>
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">

                                    <input type="number" id="Dommage Corporelle" class="form-control" min="0" max="1" placeholder="Dommage Corporelle"name="dc" value="{{ c.getDommageCorp() }}"  required="required">


                                    <label for="Dommage Corporelle">Dommage Corporelle</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                                <div class="form-label-group">
                                   <textarea id="Description" class="form-control" placeholder="Description"name="desc"> {{ c.getDescription() }}</textarea>

                                </div>
                    </div>
                    <input type="submit" value="Modifier" class="btn btn-primary btn-block">
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="{{ asset('vendor/jquery/jquery.min.js')}}"></script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js')}}"></script>

    <!-- Core plugin JavaScript-->
    <script src="{{ asset('vendor/jquery-easing/jquery.easing.min.js')}}"></script>

{% endblock %}