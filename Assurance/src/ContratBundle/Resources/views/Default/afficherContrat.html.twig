{% extends 'base.html.twig' %}

{% block main %}
    <section>
        <h1>Liste des contrats</h1>
        <div class="tbl-header">
            <table cellpadding="0" cellspacing="0" border="0">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>cin_assure</th>
                    <th>nom Entreprise</th>
                    <th>Type</th>
                    <th>Date Debut</th>
                    <th>Date Echeance</th>
                    <th>Etat</th>
                    <th>Prime</th>
                </tr>
                </thead>
            </table>
        </div>
        <div class="tbl-content">
            <table cellpadding="0" cellspacing="0" border="0">
                <tbody>
                {% for i in c %}
                    <tr>

                        <td>{{  i.nom }}</td>
                        <td>{{  i.description }}</td>
                        <td>{{  i.cinassure }}</td>
                        <td>{{  i.nomEntr }}</td>
                        <td>{{  i.type }}</td>
                        <td>{{  i.dateDebut | date }}</td>
                        <td>{{  i.dateEcheance | date }}</td>
                        <td>{{  i.etat }}</td>
                        <td>{{  i.prime }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

{% endblock %}
