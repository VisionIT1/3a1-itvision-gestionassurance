{% extends 'Backbase.html.twig' %}
{% block main %}

    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Listes des contrats</div>

       <h2 >Vous avez {{ nouv | length }} nouveaux contrats.</h2>

    <div class="card card-login mx-auto mt-3">
        <a class="btn btn-primary btn-block" href="{{ url('ajoutercontrat') }}">Ajouter un contrat</a>
        <a class="btn btn-primary btn-block" href="{{ url('afficherinactivecontrat') }}">Verifier les nouveaux contrats</a>
    </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>cin_assure</th>
                        <th>nom Entreprise</th>
                        <th>Type</th>
                        <th>Date Debut</th>
                        <th>Date Echeance</th>
                        <th>Etat</th>
                        <th>Prime</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>cin_assure</th>
                        <th>nom Entreprise</th>
                        <th>Type</th>
                        <th>Date Debut</th>
                        <th>Date Echeance</th>
                        <th>Etat</th>
                        <th>Prime</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>

                    </tr>
                    </tfoot>
                    <tbody>
                    {% for i in c %}
                        <tr>

                            <td>{{  i.nom }}</td>
                            <td>{{  i.description }}</td>
                            <td>{{  i.cinassure }}</td>
                            <td>{{  i.nomEntr }}</td>
                            <td>{{  i.type }}</td>
                            <td>{{  i.dateDebut | date }}</td>
                            <td>{{  i.dateEcheance | date }}</td>
                            <td>{{  i.etat }}</td>
                            <td>{{  i.prime }}</td>
                            <td><a href={{ path('modifiercontrat',{'id':i.id}) }}> Modifier</a></td>
                            <td><a href={{ path('deletecontrat',{'id':i.id}) }}> Supprimer</a></td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>

{% endblock %}